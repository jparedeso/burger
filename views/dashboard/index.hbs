<div class="jumbotron text-center">
    <h1>EAT DA BURGER</h1>
    <h2>Create a new Burger</h2>
    <form action="/addBurger" method="post" id="createBurger">
        <div class="form-group">
            <label for="burger">New Burger Name:</label>
            <input type="text" id="burger_name" name="burger_name">
            <button class="btn-success" type="submit">Add</button>
        </div>
    </form>
</div>
<div class="container">
    <div class="row panel panel-primary">
        <div class="col-md-6">
            <h2>Available Burgers (click to eat):</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <button class="burgerButton btn-primary btn-lg" data-burgerid="{{this.id}}">{{this.burger_name}}</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Eaten Burgers:</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <button class="btn-danger btn-lg">{{this.burger_name}}</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>



